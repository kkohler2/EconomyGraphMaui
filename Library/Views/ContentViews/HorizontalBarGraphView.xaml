<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:EconomyGraph.ViewModels"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Name="horizontalBarGraphView"
             x:Class="EconomyGraph.Views.ContentViews.HorizontalBarGraphView">
    <ContentView.Content>
        <StackLayout>
            <skia:SKCanvasView x:DataType="viewmodels:HorizontalBarGraphViewModel" x:Name="canvas" PaintSurface="PaintSurface" HorizontalOptions="Start"
                           WidthRequest="{Binding GraphWidth, Source={x:Reference horizontalBarGraphView}}" 
                           HeightRequest="{Binding GraphHeight, Source={x:Reference horizontalBarGraphView}}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>