<?xml version="1.0" encoding="UTF-8"?>
<contentviews:MultiLineGraphView  
             xmlns:contentviews="clr-namespace:EconomyGraph.Views.ContentViews" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:EconomyGraph.ViewModels"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Name="shadedMultiLinGraphView"
             x:Class="EconomyGraph.Views.ContentViews.ShadedMultiLineGraphView">
    <contentviews:MultiLineGraphView.Content>
        <StackLayout>
            <skia:SKCanvasView x:DataType="viewmodels:ShadedLineGraphViewModel" PaintSurface="PaintSurface" HorizontalOptions="Start"
                           WidthRequest="{Binding GraphWidth, Source={x:Reference shadedMultiLinGraphView}}" 
                           HeightRequest="{Binding GraphHeight, Source={x:Reference shadedMultiLinGraphView}}"/>
        </StackLayout>
    </contentviews:MultiLineGraphView.Content>
</contentviews:MultiLineGraphView>