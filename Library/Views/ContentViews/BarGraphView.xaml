<?xml version="1.0" encoding="UTF-8"?>
<contentviews:LineGraphView  
             xmlns:contentviews="clr-namespace:EconomyGraph.Views.ContentViews" 
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Name="barGraphView"
             x:Class="EconomyGraph.Views.ContentViews.BarGraphView">
    <contentviews:LineGraphView.Content>
      <StackLayout>
            <skia:SKCanvasView PaintSurface="PaintSurface" HorizontalOptions="Start"
                           WidthRequest="{Binding GraphWidth, Source={x:Reference barGraphView}}" 
                           HeightRequest="{Binding GraphHeight, Source={x:Reference barGraphView}}"/>
        </StackLayout>
  </contentviews:LineGraphView.Content>
</contentviews:LineGraphView>